<% layout('layouts/boilerplate') %>
    <h1>New Campground</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" name="campground[title]" id="title">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="text" name="campground[price]" id="price">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" name="campground[description]" id="description">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <button>Submit</button>
    </form>
    <div>
        <a href="/campgrounds">All Campgrounds</a>
    </div>